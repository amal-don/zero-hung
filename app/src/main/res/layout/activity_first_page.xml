<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/first"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/first_button"
        android:layout_marginTop="100dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="click to help others"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as user"
            android:background="@drawable/donor_button"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/login_user"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="click to get help"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as Trust"
            android:background="@drawable/donor_button"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/login_trust"
            />

    </LinearLayout>

</LinearLayout>